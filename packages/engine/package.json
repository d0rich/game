{
  "name": "engine",
  "private" : true,
  "scripts": {
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx --ignore-path ../../.gitignore .",
    "lint:prettier": "prettier --ignore-path ../../.gitignore --check \"./**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "lint": "npm run lint:js && npm run lint:prettier",
    "format:js": "eslint --ext .js,.jsx,.ts,.tsx --ignore-path ../../.gitignore . --fix",
    "format:prettier": "prettier --ignore-path ../../.gitignore --write \"./**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format": "npm run format:js && npm run format:prettier"
  }
}